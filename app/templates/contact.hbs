<AuContentHeader @titlePartOne="Vlaanderen" @titlePartTwo="mandatendatabank" @pictureSize="large">
  <img sizes="50vw" src="/assets/images/loket-header-1600-85a5251e74ef6ac8491b2f228d2c90da.jpg" srcset="/assets/images/banner-bruges-320.jpg 320w, /assets/images/banner-bruges-1024.jpg 1024w, /assets/images/banner-bruges-1600.jpg 1600w" alt="">
</AuContentHeader>

<div class="au-o-layout">
  <div class="au-o-region-large">
    <AuHeading @level="1" @skin="2" class="au-u-margin-bottom-small">
      Contact
    </AuHeading>

    <form class="au-c-form au-u-margin-bottom-large">
      <AuFieldset as |f|>
        <f.legend>
          Waar gaat uw bericht over?
        </f.legend>
        <f.content>
          <AuRadioGroup
            @name="contact-subject"
            @onChange={{fn (mut this.mailto)}}
            as |Group|
          >
            <Group.Radio @value="LoketLokaalBestuur@vlaanderen.be">
              Een functionaliteit, bug of probleem
            </Group.Radio>
            <Group.Radio @value="binnenland@vlaanderen.be">
              Een inhoudelijke vraag over mandaten en mandatarissen
            </Group.Radio>
          </AuRadioGroup>
        </f.content>
      </AuFieldset>

      {{#if this.mailto}}
        <AuLinkExternal @icon="mail" @skin="button" href="mailto:{{this.mailto}}">
          Bericht versturen
        </AuLinkExternal>
      {{else}}
        <AuButton @icon="mail" @disabled={{true}}>Bericht versturen</AuButton>
      {{/if}}
    </form>
  </div>
</div>

{{outlet}}
