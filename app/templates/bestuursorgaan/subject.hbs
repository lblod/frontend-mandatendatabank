{{title "" model.isTijdsspecialisatieVan.naam "" prepend=true}}
<div data-tabs-responsive-label="Navigatie">
  <div class="u-padding--rl--small u-background--gray-lighter">
    <div class="u-padding--top--tiny">
      <div class="grid">
        <div class="col--6-12">
          {{#link-to 'index' class="link--icon"}}
            <small>{{wu-icon "vi-arrow vi-u-180deg"}} Terug naar zoeken</small>
          {{/link-to}}
        </div>
      </div>
    </div>
    <div class="u-padding--tb" id="main">
      {{#with-rdfa-context model=model as |ctx|}}
        <h1 class="h1 u-spacer--bottom--tiny">
          Orgaan:
          {{#ctx.get prop="naam" as |attrs value|}}
            <span {{rdfa attrs}}>
              {{#if naam}}
                {{naam}}
              {{else}}
                {{model.isTijdsspecialisatieVan.naam}}
              {{/if}}
            </span>
          {{/ctx.get}}
        </h1>
        <div class="u-hidden">
          {{ctx.each prop="bevat"}}
        </div>
        {{bestuursorgaan-in-tijd-select selectedBestuursorgaan=model}}
      {{/with-rdfa-context}}
    </div>
  </div>
  <div class="tab__pane u-display--block u-padding--rl--small u-spacer--tb">
    {{outlet}}
  </div>
</div>
