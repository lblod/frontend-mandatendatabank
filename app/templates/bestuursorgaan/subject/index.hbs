{{#data-table content=content isLoading=isLoading noDataMessage="Geen mandatarissen gevonden"
   sort=sort page=page size=size class="mandataris-data-table" as |t|}}
  {{#t.content as |c|}}
    {{#c.header}}
      {{th-sortable field='bekleedt.bevatIn.isTijdsspecialisatieVan.bestuurseenheid.werkingsgebied.naam' currentSorting=sort label='Locatie'}}
      {{th-sortable field='bekleedt.bevatIn.isTijdsspecialisatieVan.classificatie.label' currentSorting=sort label='Orgaan'}}
      {{th-sortable field='heeftLidmaatschap.binnenFractie.naam' currentSorting=sort label='Fractie'}}
      {{th-sortable field='isBestuurlijkeAliasVan.gebruikteVoornaam' currentSorting=sort label='Naam'}}
      {{th-sortable field='isBestuurlijkeAliasVan.achternaam' currentSorting=sort label='Familienaam'}}
      {{th-sortable field='isBestuurlijkeAliasVan.geslacht.label' currentSorting=sort label='Geslacht'}}
      {{th-sortable field='bekleedt.bestuursfunctie.label' currentSorting=sort label='Mandaat'}}
      <th>Bevoegdheden</th>
      {{th-sortable field='start' currentSorting=sort label='Start mandaat'}}
      {{th-sortable field='einde' currentSorting=sort label='Eind mandaat'}}
    {{/c.header}}
    {{#c.body as |row|}}
      <td>
        {{row.bekleedt.bevatIn.isTijdsspecialisatieVan.bestuurseenheid.werkingsgebied.naam}}
      </td>
      <td>
        {{#link-to 'bestuursorgaan.subject.index' row.bekleedt.bevatIn.isTijdsspecialisatieVan.id}}
       </td>
      <td>
        {{row.heeftLidmaatschap.binnenFractie.naam}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.linked-resource p="isBestuurlijkeAliasVan" as |alias|}}
            {{#link-to 'persoon.subject.index' row.isBestuurlijkeAliasVan.id}}
              {{alias.prop p="gebruikteVoornaam"}}
            {{/link-to}}
          {{/ctx.linked-resource}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.linked-resource p="isBestuurlijkeAliasVan" as |alias|}}
            {{#link-to 'persoon.subject.index' row.isBestuurlijkeAliasVan.id}}
              {{alias.prop p="achternaam"}}
            {{/link-to}}
          {{/ctx.linked-resource}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.linked-resource p="isBestuurlijkeAliasVan" as |alias|}}
            {{#alias.linked-resource p="geslacht" as |g|}}
              {{g.prop p="label"}}
            {{/alias.linked-resource}}
          {{/ctx.linked-resource}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.linked-resource p="bekleedt" as |mandaat|}}
            {{#alias.linked-resource p="bestuursfunctie" as |rol|}}
              {{rol.prop p="label"}}
            {{/alias.linked-resource}}
          {{/ctx.linked-resource}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.each-resource p="beleidsdomein" as |beleidsdomein|}}
            {{beleidsdomein.prop p="label"}}<br>
          {{/ctx.each-resource}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.prop p="start"}}{{moment-format row.start 'DD/MM/YYYY'}}{{/ctx.prop}}
        {{/with-rdfa-resource}}
      </td>
      <td>
        {{#with-rdfa-resource resource=row as |ctx|}}
          {{#ctx.prop p="einde"}}{{moment-format row.einde 'DD/MM/YYYY'}}{{/ctx.prop}}
        {{/with-rdfa-resource}}
      </td>
    {{/c.body}}
  {{/t.content}}
{{/data-table}}
