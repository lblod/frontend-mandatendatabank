<PowerSelect
  @disabled={{disabled}}
  @search={{perform searchTask}}
  @selected={{selectedBestuursorgaan}}
  @loadingMessage="Aan het laden..."
  @searchMessage="Typ om te zoeken"
  @noMatchesMessage="Geen resultaten"
  @options={{descSortedBestuursorganen}}
  @searchEnabled={{false}}
  @onchange={{action "select"}} as |bestuursorgaan|>
  Bestuursperiode:
  {{moment-format bestuursorgaan.bindingStart 'DD-MM-YYYY'}}
  &mdash;
  {{#if bestuursorgaan.bindingEinde}}
    {{moment-format bestuursorgaan.bindingEinde 'DD-MM-YYYY'}}
  {{else}}
    heden
  {{/if}}
</PowerSelect>

{{yield}}
