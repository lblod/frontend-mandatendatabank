<PowerSelect
  @ariaLabel="Uitklapbaar keuzemenu"
  @ariaDescribedBy="Lijst met bestuursperioden"
  @selected={{@selectedBestuursorgaan}}
  @destination="ember-appuniversum-wormhole"
  @noMatchesMessage="Geen resultaten"
  @options={{this.descSortedBestuursorganen}}
  @searchEnabled={{false}}
  @onChange={{this.select}} as |bestuursorgaan|>
  Bestuursperiode:
  {{moment-format bestuursorgaan.bindingStart 'DD-MM-YYYY'}}
  &mdash;
  {{#if bestuursorgaan.bindingEinde}}
    {{moment-format bestuursorgaan.bindingEinde 'DD-MM-YYYY'}}
  {{else}}
    heden
  {{/if}}
</PowerSelect>

{{yield}}
