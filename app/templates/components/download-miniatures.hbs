<div class="au-o-grid au-u-margin-bottom">
  {{#if this.csvFile}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true" @divided="true" as |c|>
        <c.header @badgeSkin="brand" @badgeIcon="download">
          <AuHeading @level="2" @skin="4">
            Download in CSV formaat
          </AuHeading>
          <p>Voor spreadsheet editors zoals Excel of Numbers.</p>
        </c.header>
        <c.content>
          {{!TODO, convert this to an a tag + download attribute so it works without JS}}
          <AuButton {{on 'click' (fn this.download this.csvFile)}} >Download in CSV formaat</AuButton>
          <AuHelpText>{{this.csvMetadata}}</AuHelpText>
        </c.content>
      </AuCard>
    </div>
  {{else}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true" @divided="true" as |c|>
        <c.header @badgeSkin="brand" @badgeIcon="download">
          <AuHeading @level="2" @skin="4">
            Download in CSV formaat
          </AuHeading>
          <p>Voor spreadsheet editors zoals Excel of Numbers.</p>
        </c.header>
        <c.content>
          <AuHelpText>Momenteel niet beschikbaar</AuHelpText>
        </c.content>
      </AuCard>
    </div>
  {{/if}}
  {{#if this.ttlFile}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true" @divided="true" as |c|>
        <c.header @badgeSkin="brand" @badgeIcon="download">
          <AuHeading @level="2" @skin="4">
            Download in Turtle formaat
          </AuHeading>
          <p>Gestructureerde data voor dataverwerking en analyse</p>
        </c.header>
        <c.content>
          {{!TODO, convert this to an a tag + download attribute so it works without JS}}
          <AuButton {{on 'click' (fn this.download this.ttlFile)}} >Download in Turtle formaat</AuButton>
          <AuHelpText>{{this.ttlMetadata}}</AuHelpText>
        </c.content>
      </AuCard>
    </div>
  {{else}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
      <AuCard @flex="true" @divided="true" as |c|>
        <c.header @badgeSkin="brand" @badgeIcon="download">
          <AuHeading @level="2" @skin="4">
            Download in Turtle formaat
          </AuHeading>
          <p>Gestructureerde data voor dataverwerking en analyse</p>
        </c.header>
        <c.content>
          <AuHelpText>Momenteel niet beschikbaar</AuHelpText>
        </c.content>
      </AuCard>
    </div>
  {{/if}}
</div>
